<div id="<%= dom_id list %>">
  <p>
    <strong>Name:</strong>
    <%= list.name %>
  </p>
  <h2>Bookmarks:</h2>
<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.content %></p>
  <%= link_to "Delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
</div>

<div>
  <%= link_to "Edit this list", edit_list_path(@list) %> |
  <%= link_to "Back to lists", lists_path %>
  <%# <%= link_to "Leave a review",  new_list_review_path(@list) %>
  <%= button_to "Destroy this list", @list, method: :delete %>
</div>
